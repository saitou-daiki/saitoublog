.single-header
  %h1 
    =link_to root_path, data: {"turbolinks" => false}  do
      = image_tag 'home.jpg',width: "50px", height: "50px"
      %p ホームに戻る

.single-main
  .l-single-container

    %p.l-single-time
      = @tweet.created_at.strftime("%Y-%m-%d %H:%M:%S")
    %h2.l-single-head
      = @tweet.title

    = image_tag @tweet.image.url, class: 'lower-message__image',width: "100%", height: "300px" if @tweet.image.present?

    .form-group  
      = @tweet.content



      -# .form-group
      -#   = f.text_area :content, cols: "30", placeholder: "記事の本文を入力してください", rows: "10", class: "textarea-default"
      -# .form-group
      -#   = f.submit "コメントする", class: "btn-default btn-red"
  -if user_signed_in?
    .item-detail-message
      .message-content
      
        = form_with class: "block",model: @comment,local: true, url:  tweet_comments_path(@tweet),method: :post do |f|
        
          = f.text_area :comment, placeholder: "こちらに文章を打ち込んで記事に対してのコメントを書き込めます",class: "textarea-default"
          = f.submit 'コメントする',class: "message-submit btn-default btn-gray"

       
  
  .item-detail-message
    .message-content
      %h2.l-single-head
        コメント一覧
      
  
      - @tweet.comments.each do |comment|
        .comment
          .comment-name.clearfix
            
            %span 名前：
            - if  comment.user.name
              = comment.user.name
            -else 
              名無しさん。
          .comment-comment.clearfix
            = comment.comment