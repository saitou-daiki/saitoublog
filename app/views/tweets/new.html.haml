.single-header
  %h1 
    =link_to root_path  do
      = image_tag 'home.jpeg',width: "50px", height: "50px"
      %p ホームに戻る

.single-main
  .l-single-container
    = form_with class: "block",model: @tweet,local: true, url: tweets_path,method: :post do |f|
      %h2.l-single-head
        記事を投稿する
      = f.label :image, class: 'sell-dropbox-container' do
        %pre.visible-pc ドラッグアンドドロップ またはクリックしてファイルをアップロードできます
        
   
        = f.file_field :image, class: 'hidden'
      .form-group
      
        = f.text_field :title, class: "input-default",placeholder: "記事のタイトルを入力してください"

      .form-group
        = f.text_area :content, cols: "30", placeholder: "記事の本文を入力してください", rows: "10", class: "textarea-default"
      .form-group
        = f.submit "投稿する", class: "btn-default btn-red"