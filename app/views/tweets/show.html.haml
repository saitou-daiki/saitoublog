.single-header
  %h1 
    =link_to root_path  do
      = image_tag 'home.jpeg',width: "50px", height: "50px"
      %p ホームに戻る

.single-main
  .l-single-container
    = form_with class: "block",model: @tweet,local: true, url: tweets_path,method: :post do |f|
      %p.l-single-time
        = @tweet.created_at.strftime("%Y-%m-%d %H:%M:%S")
      %h2.l-single-head
        = @tweet.title

      = image_tag @tweet.image.url, class: 'lower-message__image',width: "100%", height: "300px" if @tweet.image.present?

      .form-group  
        = @tweet.content



      -# .form-group
