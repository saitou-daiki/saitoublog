%article.m-article.js-article.wow.fadein.clearfix
  %figure.m-article_image
    = image_tag tweet.image.url, class: 'lower-message__image', width: "546", height: "290" if tweet.image.present?

  .m-article_text-block
    .m-article_text-block-top
      = link_to root_path do
        %h2.m-article_title 
          = tweet.title
        %p.m-article_date 
          = tweet.created_at.strftime("%Y-%m-%d %H:%M:%S")
        %p.m-article_summary 
          = tweet.content
  
